{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>
      <a {{action 'saveQuestion1'}} class="waves-effect waves-light btn">Ask!</a>
    </form>
  </div>
{{else}}

  <a {{action 'questionFormShow'}} class="waves-effect waves-light btn">New Question</a>
{{/if}}
