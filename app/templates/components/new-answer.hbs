{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>
      <a {{action 'saveAnswer'}} class="waves-effect waves-light btn">Save Answer</a>
    </form>
  </div>
{{else}}
  <a {{action 'answerFormShow'}} class="waves-effect waves-light btn">New Answer</a>
{{/if}}
